@*Tecnologia da página - Razor*@
@model PlanoSaude

<form asp-action="Cadastrar" asp-controller="PlanoSaude" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Plano de Saúde</legend>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Plano">Plano:</label>
            <input class="form-control" asp-for="Plano" type="text" placeholder="Nome do Plano de Saúde" />
            <span class="text-danger" asp-validation-for="Plano"></span>
        </div>

        <div class="form-group">
            <label asp-for="Codigo">Codigo:</label>
            <input class="form-control" asp-for="Codigo" type="text" placeholder="Plano de Saúde" />
            <span class="text-danger" asp-validation-for="Codigo"></span>
        </div>

       
       
        <input class="btn btn-info" type="submit" value="Cadastrar" />
    </fieldset>
</form>